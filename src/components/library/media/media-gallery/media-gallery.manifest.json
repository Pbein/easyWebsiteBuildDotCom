{
  "id": "media-gallery",
  "category": "media",
  "name": "Media Gallery",
  "description": "Image gallery component with grid, masonry, and lightbox display modes. Supports category filtering, captions, and configurable column counts.",
  "siteTypes": ["portfolio", "business", "event", "personal"],
  "personalityFit": {
    "minimal_rich": [0.0, 1.0],
    "playful_serious": [0.0, 1.0],
    "warm_cool": [0.0, 1.0],
    "light_bold": [0.0, 1.0],
    "classic_modern": [0.0, 1.0],
    "calm_dynamic": [0.0, 1.0]
  },
  "requiredProps": [
    {
      "name": "images",
      "type": "GalleryImage[]",
      "description": "Array of images with src, alt, optional caption and category"
    }
  ],
  "optionalProps": [
    { "name": "headline", "type": "string", "description": "Section headline" },
    { "name": "subheadline", "type": "string", "description": "Supporting subheadline" },
    {
      "name": "variant",
      "type": "string",
      "description": "Display variant: grid, masonry, or lightbox"
    },
    { "name": "columns", "type": "number", "description": "Number of columns: 2, 3, or 4" },
    { "name": "showCaptions", "type": "boolean", "description": "Show caption overlays on hover" },
    { "name": "enableFilter", "type": "boolean", "description": "Enable category filter tabs" }
  ],
  "consumedTokens": [
