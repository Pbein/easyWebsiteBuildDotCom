  "optionalProps": [
    { "name": "headline", "type": "string" },
    { "name": "subheadline", "type": "string" },
    { "name": "variant", "type": "string", "description": "cards | minimal | hover-reveal" },
    { "name": "columns", "type": "number", "description": "2, 3, or 4" }
