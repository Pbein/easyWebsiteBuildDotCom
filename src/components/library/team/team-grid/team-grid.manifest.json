{
  "id": "team-grid",
  "category": "team",
  "name": "Team Grid",
  "description": "Display team members in a responsive grid with photos, names, roles, and optional bios and social links.",
  "siteTypes": ["business", "booking", "nonprofit", "educational"],
  "personalityFit": {
    "minimal_rich": [0.0, 1.0],
    "playful_serious": [0.0, 1.0],
    "warm_cool": [0.0, 1.0],
    "light_bold": [0.0, 1.0],
    "classic_modern": [0.0, 1.0],
    "calm_dynamic": [0.0, 1.0]
  },
  "requiredProps": [
    {
      "name": "members",
      "type": "TeamMember[]",
      "description": "Array of team members with name, role, optional bio/image/socials"
