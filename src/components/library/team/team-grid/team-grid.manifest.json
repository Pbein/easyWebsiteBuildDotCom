    "color-border",
    "color-border-light",
    "font-heading",
    "font-body",
    "text-xs",
    "text-sm",
    "text-base",
    "text-lg",
    "text-xl",
    "text-2xl",
    "text-4xl",
    "leading-tight",
    "leading-normal",
    "leading-relaxed",
    "tracking-tight",
    "weight-medium",
    "weight-semibold",
    "weight-bold",
    "radius-md",
    "radius-lg",
    "radius-xl",
    "radius-full",
    "shadow-sm",
    "shadow-md",
    "shadow-lg",
    "transition-base",
    "transition-fast",
    "ease-default",
    "container-max",
    "space-section",
    "space-component",
    "space-element",
    "space-tight"
